# Firebase Configuration (Frontend - Public)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK (Backend - Private)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"

# LM Studio Configuration
LMSTUDIO_API_URL=http://localhost:1234/v1
LMSTUDIO_API_KEY=lm-studio
# Optional: Default model for LM Studio
LMSTUDIO_DEFAULT_MODEL=llama-3.1-8b-instruct

# Hugging Face Configuration
HUGGINGFACE_API_KEY=hf_your_api_key_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models

# Google Cloud Platform (Optional)
GCP_PROJECT_ID=your-gcp-project-id
GCP_MODEL_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# OpenRouter (Optional)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_API_URL=https://openrouter.ai/api/v1

# Audio Processing Services (Demucs & Matchering)
DEMUCS_BASE_URL=http://34.168.113.13:8080
MATCHERING_BASE_URL=http://34.168.113.13:8080
NEXT_PUBLIC_DEMUCS_BASE_URL=http://34.168.113.13:8080
NEXT_PUBLIC_MATCHERING_BASE_URL=http://34.168.113.13:8080
AUDIO_MAX_FILE_SIZE=104857600

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting & Security
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
